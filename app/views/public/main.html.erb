<h1 class="title">¡Hola Animal Lover♥!</h1>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<h2 class="title">Publicaciones</h2>

<p><%= notice %></p>

<%if user_signed_in?%>
    <%if !current_user.administrador%>
        <div class="Buttons">
            <div class="Button">
                <%= link_to new_publication_path, class:"button is-medium is-warning", method: :get do%>
                        <span>Realizar Nueva Publicación</span>
                <% end %>
            </div>
        </div>
    <%end%>
<%end%>


<h2>Buscar por nombre </h2>
<%=form_tag(publications_path, method: :get) do%>
    <%= text_field_tag(:search, params[:search]) %>

    <%= submit_tag ("Buscar")%>
<%end%>

<div style="display: flex; flex-flow: row wrap; ">
<%@publications.each do |publication|%>
      <div style="border: solid 1px; width: 200px; padding: 10px; align-text: center; margin: 5px;">
        <p><%= link_to publication.titulo, publication_path(publication) %></p>
            <p><% if publication.image.attached? && publication.vigente%></p>
                <%= image_tag publication.image, class: "sm-img" %>
                <% end %></p>
      </div>
  <% end %>
</div>

<h2>Buscar por especie </h2>
<%=form_tag(publications_path, method: :get) do%>
    <%= text_field_tag(:especie) %>
    <%= submit_tag ("Buscar")%>
<%end%>

<div style="display: flex; flex-flow: row wrap; ">
<%@publications_2.each do |publication|%>

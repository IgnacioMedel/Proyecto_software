<% if user_signed_in? && current_user.administrador%>
    <h1>Solicitudes</h1>

    <p><%= notice %></p>

    <table class="table is-bordered">
        <thead>
            <tr>
                <th>Solicitante</th>
                <th>Solicitado</th>
                <th>Contenido</th>
                <th>Estado</th>
                <th colspan="3">Acciones</th>
            </tr>
        </thead>

        <tbody>
            <% @requests.each do |request| %>
                <tr>
                    <td><%= User.find(request.requestor_id).nombre%></td>
                    <td><%= User.find(request.receiver_id).nombre%></td>
                    <td><%= request.contenido %></td>
                    <td><%= request.status %></td>
                    <td><%= link_to 'Revisar', request_path(request.id)%></td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= link_to 'Subir nueva solicitud', new_request_path %>
<% else%>
    <div class="columns is-mobile"> 
        <div class="column">       
            <h1 class="title">Acceso denegado :(</h1>
            <br>
            <p class="subtitle" "is-size-4">Nuestros usuarios confían en que no compartamos su información.</p>
            <p class="subtitle" "is-size-4">¡Inicia sesión o crea una cuenta para poder realizar una solicitud♥!</p>
        </div>
        <div class="column"> 
            <figure class="image is-256x256">
                <img class="is-rounded" src="https://media1.tenor.com/images/dd3d446811e0c929f1a76ca87f389fa6/tenor.gif">
            </figure>
        </div>
    </div>
<% end%>
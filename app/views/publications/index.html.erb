<h1>Publicaciones</h1>

<p><%= notice %></p>


<style>
.sm-img{
    width: 200px;
    height: auto;
}
</style>

<h2>Buscar por nombre </h4>
<%=form_tag(publications_path, method: :get) do%>
    <%= text_field_tag(:search, params[:search]) %>

    <%= submit_tag ("Buscar")%>
<%end%>

<div style="display: flex; flex-flow: row wrap; ">
<%@publications.each do |publication|%>
      <div style="border: solid 1px; width: 200px; padding: 10px; align-text: center; margin: 5px;">
        <p><%= link_to publication.titulo, publication_path(publication) %></p>
            <p><% if publication.image.attached? %></p>
                <%= image_tag publication.image, class: "sm-img" %>
                <% end %></p>
      </div>
  <% end %>
</div>

